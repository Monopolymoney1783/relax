xcodeproj: SampleApp

development:
  scheme: Sample App
  sdk: iphoneos
  configuration: Debug
  build_settings:
    OTHER_SWIFT_FLAGS: 
      - "-DMOCK"
    OTHER_LINKER_FLAGS:
      - "$(inherited)"
      - "-ObjC"
  export_options:
    method: development
  info_plist:
    CFBundleName: Sample (Debug)
    CFBundleVersion: "%h-%C"
    CFBundleDevelopmentRegion: $COUNTRY
    UISupportedExternalAccessoryProtocols:
      - com.example.SampleApp
      - com.example.SampleApp2


development2:
  scheme: Sample App
  bundle_identifier: com.scenee.SampleApp.$BUNDLE_SUFFIX
  configuration: Debug
  export_options:
    method: development


adhoc:
  scheme: Sample App
  bundle_identifier: com.scenee.SampleApp # Please replace your valid identifier.
  bundle_version:  "%h-%C"
  provisioning_profile: "Scenee Wild Card Dev" # Please replace your valid profile name.
  export_options:
    method: ad-hoc 
    thinning : iPhone7,1
    #compileBitcode: false

enterprise:
  scheme: Sample App
  bundle_identifier: com.scenee.SampleApp # Please replace your valid identifier.
  bundle_version:  "%h-%C"
  team_id: TGKEN7XA5C # Please replace your enterpise team id.
  export_options:
    method: enterprise


appstore:
  scheme: Sample App
  export_options:
    method: appstore
    upload_symbols: true
    #uploadSymbols: true
    #uploadBitcode: true

framework:
  scheme: SampleFramework
  build_settings:
    OTHER_C_FLAGS:
      - "-fembed-bitcode"
      - "-fsanitize=address"

staticlib:
  scheme: SampleLib

log_formatter: xcpretty
